{
    "variables" : {
        "aws_access_key_id" : "{{env 'AWS_ACCESS_KEY_ID'}}",
        "aws_secret_access_key" : "{{env 'AWS_SECRET_ACCESS_KEY'}}",
        "aws_session_token" : "{{env 'AWS_SESSION_TOKEN'}}" ,
        "time_zone" : "{{env 'TIME_ZONE'}}"
    }
    "builders" [
        {
            "type" : "amazon-ebs" ,
            "acccess_key" : "{{user 'aws_access_key_id'}}",
            "secret_key" : "{{user aws_secret_access_key}}" ,
            "token" : "{{user aws_session_token}}" ,
            "region" : "eu-west-2" ,
            "source_ami" : "ami-0ba06c0257c11d483" ,
            "instance_type" : "t2.micro" ,
            "ssh_username" : "ec2-user" ,
            "associate_public_ip_address" : "true" ,
            "ami-name" : "docker-prod-aws-ecs-base {{timestamp}}" ,
            "tags" : {
                "Name" : "Docker Prod AWS ECS Base Image",
                "SourceAMI" : "ami-0ba06c0257c11d483",
                "DockerVersion" : "18.06.1-ce",
                "ECSAgentVersion" : "1.21.0" , 
            }
        }
    ]
    "provisioners" [
        {
            "type" : "shell",
            "script" : "scripts/configure-timezone.sh",
            "environment_vars" : [
                "TIME_ZONE={{user 'time_zone'}}"
            ]
        }
    ]
    "post-processors" []
}